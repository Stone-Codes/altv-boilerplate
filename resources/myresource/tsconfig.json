{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,

    "noImplicitAny": true,
    "sourceMap": false,

    "rootDir": "./",
    "typeRoots": ["node_modules/@altv", "node_modules/@types", "custom-types"]
  }
}
